<script>
    document.addEventListener('DOMContentLoaded', function () {
      const loginForm = document.getElementById('loginForm');
      const emailInput = document.getElementById('exampleForm1');
      const passwordInput = document.getElementById('exampleForm2');
  
      // Add an event listener to the form submission
      loginForm.addEventListener('submit', function (event) {
        event.preventDefault();
  
        // Check if the test credentials are entered
        if (emailInput.value === 'test@soxfort.com' && passwordInput.value === 'test') {
          // Redirect to the homepage (you should replace 'homepage-url' with the actual URL)
          window.location.href = 'index.html';
        } else {
          // Handle incorrect credentials (show an error message, etc.)
          alert('Invalid credentials. Please try again.');
        }
      });
    });
  </script>
</body>
