
<section class="position-relative py-8 login-section" style="height: 100%;">
  <% for (let error of errors) { %>
    <div class="alert alert-danger" role="alert"><%= error.message %></div>
    <% } %> <% if(message.success){ %>
    <div class="alert alert-success" role="alert"><%= message.success %></div>
    <% } %>
      <div class="container">
        <div class="row align-items-center">
<div class="col-12 col-lg-6 py-lg-20">
            <div class="mw-md mx-auto">
              <a class="d-inline-block h3 mb-12 text-decoration-none" href="#">
                <div class="position-relative mt-n20 mw-md mx-auto text-center">
                  <!-- Add the d-none class to hide these elements -->
                  <a href="/">
                      <img src="sirius-assets/images/logos/sirius-logoo.png" alt="" width="496px" class="" style="padding: 50px;">
                  </a>
                  <h2 class="mb-8">Agrifora Management System</h2>
                  <p class="mb-8">Login to manage inventory, order, delivery notes and more</p>
              </div>
              
              <form action="/login" method="post">
                <div class="mb-6">
                  <label class="form-label" for="exampleForm1">Email Address</label>
                  <input class="form-control" id="email" type="email" name="email" placeholder="supermario@example.com">
                </div>
                <div class="mb-6">
                  <label class="form-label" for="exampleForm2">Password</label>
                  <input class="form-control" id="password" name="password" type="password" placeholder="*******">
                </div>
                <div class="row mb-8">
                  <div class="col-12 col-lg-auto">
                    <div class="form-check">
                      <input class="form-check-input" id="checkbox1-1" type="checkbox" value="" checked="">
                      <label class="form-check-label" for="checkbox1-1">Remember me</label>
                    </div>
                  </div>
                  <div class="col-12 col-lg-auto ms-auto"><a class="text-decoration-none" href="/resetpassword">Forgot password?</a></div>
                </div>
                <button type="submit" class="btn btn-primary py-3 mb-4 w-100">Login</button>
               
              </form>
            </div>
          
          </div>
        </div>
      </div>
      <div class="d-none d-lg-flex align-items-center justify-content-center position-absolute top-0 bottom-0 end-0 col-6 bg-light">
        <img class="img-fluid" style="max-width: 100%; max-height: 724px; object-fit: cover; object-position: bottom;" src="sirius-assets/images/backgroundold.png" alt="">
    </div>
    
    </section>


    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const loginForm = document.getElementById('loginForm');
        const emailInput = document.getElementById('exampleForm1');
        const passwordInput = document.getElementById('exampleForm2');
    
        // Add an event listener to the form submission
        loginForm.addEventListener('submit', function (event) {
          event.preventDefault();
    
          // Check if the test credentials are entered
          if (emailInput.value === 'test@soxfort.com' && passwordInput.value === 'test') {
            // Redirect to the homepage (you should replace 'homepage-url' with the actual URL)
            window.location.href = 'index.html';
          } else {
            // Handle incorrect credentials (show an error message, etc.)
            alert('Invalid credentials. Please try again.');
          }
        });
      });
    </script>