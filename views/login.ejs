                <button class="btn me-4 p-1 rounded-circle btn-primary-light"></button>
                <button class="btn me-4 p-1 rounded-circle btn-danger"></button>
                <button class="btn p-1 rounded-circle btn-primary-light"></button>
              </div>
            </div>
          </div>
        </div>
        <div class="d-none d-lg-flex align-items-center justify-content-center position-absolute top-0 bottom-0 end-0 col-6 bg-dark">
          <img class="img-fluid" style="max-width: 100%; max-height: 624px; object-fit: cover; object-position: bottom;" src="sirius-assets/images/backgroundold.png" alt="">
      </div>
      
      </section>
