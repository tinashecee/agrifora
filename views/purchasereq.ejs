    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const saveRequisitionButton = document.getElementById('saveRequisitionButton');
            const productNameInput = document.getElementById('productName');
            const productDescriptionInput = document.getElementById('productDescription');
            const unitMeasureInput = document.getElementById('unitMeasure');
            const quantityInput = document.getElementById('quantity');
            const notesInput = document.getElementById('notes');
            const fileUploadInput = document.getElementById('fileUpload');
            const alertContainer = document.getElementById('alertContainer');
            const pendingRequisitionsTableBody = document.getElementById('pendingRequisitionsTableBody');
            const completedRequisitionsTableBody = document.getElementById('completedRequisitionsTableBody');
            const viewRequisitionModal = new bootstrap.Modal(document.getElementById('viewRequisitionModal'));
    
            saveRequisitionButton.addEventListener('click', function () {
                // Retrieve requisition details
                const productName = productNameInput.value;
                const productDescription = productDescriptionInput.value;
                const unitMeasure = unitMeasureInput.value;
                const quantity = quantityInput.value;
                const notes = notesInput.value;
                const file = fileUploadInput.files[0];
    
                // Create a new row in the pending requisitions table
                const newRow = pendingRequisitionsTableBody.insertRow();
                newRow.innerHTML = `
                    <td>${productName}</td>
                    <td>${productDescription}</td>
                    <td>${unitMeasure}</td>
                    <td>${quantity}</td>
                    <td>${notes}</td>
                    <td>${file ? `<a href="#" onclick="openFileModal('${file.name}')">View File</a>` : 'No File'}</td>
                    <td>
                        <button class="btn btn-primary view-button" data-bs-toggle="modal" data-bs-target="#viewRequisitionModal">
                            <i class="fas fa-eye"></i> View
                        </button>
                    </td>
                `;
    
                // Clear form inputs
                productNameInput.value = '';
                productDescriptionInput.value = '';
                unitMeasureInput.value = 'Piece';
                quantityInput.value = '';
                notesInput.value = '';
                fileUploadInput.value = '';
    
                // Automatically dismiss the modal
                const newRequisitionModal = new bootstrap.Modal(document.getElementById('newRequisitionModal'));
                newRequisitionModal.hide();
    
                // Display a success alert for 2 seconds
                alertContainer.innerHTML = `
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Requisition added successfully!
                    </div>
                `;
    
                // Automatically dismiss the alert after 2 seconds
                setTimeout(function () {
                    alertContainer.innerHTML = '';
                }, 2000);
            });
    
            // Function to open the view modal and set up the actions
            function openViewModal(button) {
                const row = button.closest('tr');
                const productName = row.cells[0].textContent;
                const productDescription = row.cells[1].textContent;
                const unitMeasure = row.cells[2].textContent;
                const quantity = row.cells[3].textContent;
                const notes = row.cells[4].textContent;
                const fileLink = row.cells[5].querySelector('a');
    
                // Set the view modal content
                document.getElementById('viewProductName').textContent = productName;
                document.getElementById('viewProductDescription').textContent = productDescription;
                document.getElementById('viewUnitMeasure').textContent = unitMeasure;
                document.getElementById('viewQuantity').textContent = quantity;
                document.getElementById('viewNotes').textContent = notes;
                document.getElementById('viewFileLink').textContent = fileLink ? 'View File' : 'No File';
                document.getElementById('viewFileLink').href = fileLink ? fileLink.href : '#';
    
                // Show the view modal
                viewRequisitionModal.show();
    
                // Approve button click event
                const approveRequisitionButton = document.getElementById('approveRequisitionButton');
                approveRequisitionButton.addEventListener('click', function () {
                    // Move the row to the completed requisitions table
                    completedRequisitionsTableBody.appendChild(row);
    
                    // Close the modal
                    viewRequisitionModal.hide();
                });
    
                // Reject button click event
                const rejectRequisitionButton = document.getElementById('rejectRequisitionButton');
                rejectRequisitionButton.addEventListener('click', function () {
                    // You can implement rejection logic here if needed
                    alert('Requisition rejected.');
    
                    // Close the modal
                    viewRequisitionModal.hide();
                });
            }
    
            // Function to open the file modal
            function openFileModal(fileName) {
                // You can implement a file viewer modal here if needed
                alert(`Opening file: ${fileName}`);
            }
        });
    </script>


